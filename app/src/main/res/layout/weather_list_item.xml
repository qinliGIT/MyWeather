<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#1f000000"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.ql.weather.custom.FZLTTextView
        android:id="@+id/week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="6dp"
        android:text="454545"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <com.ql.weather.custom.FZLTTextView
        android:id="@+id/weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="6dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/week"
        android:layout_toLeftOf="@+id/ic_weather"
        android:paddingLeft="10dp"
        android:text="454545"
        android:textColor="@android:color/white"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/ic_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="10dp"
        android:src="@mipmap/sm_snow" />

    <com.ql.weather.custom.FZLTTextView
        android:id="@+id/wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="6dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/white" />

    <com.ql.weather.custom.FZLTTextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/ic_weather"
        android:layout_toLeftOf="@+id/wind"
        android:padding="6dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/white" />
</RelativeLayout>
