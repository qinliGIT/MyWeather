<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#1f000000"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.ql.weather.custom.FZLTTextView
        android:id="@+id/week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_x_15"
        android:gravity="center"
        android:padding="@dimen/layout_x_8"
        android:text="454545"
        android:textColor="@android:color/white"
        android:textSize="@dimen/layout_x_20" />

    <com.ql.weather.custom.FZLTTextView
        android:id="@+id/weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_x_15"
        android:padding="@dimen/layout_x_8"
        android:gravity="center"
        android:layout_toRightOf="@+id/week"
        android:layout_toLeftOf="@+id/ic_weather"
        android:paddingLeft="@dimen/layout_x_15"
        android:text="454545"
        android:textColor="@android:color/white"
        android:textSize="@dimen/layout_x_20" />


    <ImageView
        android:id="@+id/ic_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="@dimen/layout_x_15"
        android:src="@mipmap/sm_snow" />

    <com.ql.weather.custom.FZLTTextView
        android:id="@+id/wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_y_15"
        android:textSize="@dimen/layout_x_20"
        android:padding="@dimen/layout_x_8"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/white" />

    <com.ql.weather.custom.FZLTTextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/layout_y_15"
        android:textSize="@dimen/layout_x_20"
        android:layout_toRightOf="@+id/ic_weather"
        android:layout_toLeftOf="@+id/wind"
        android:padding="@dimen/layout_x_8"
        android:layout_marginRight="@dimen/layout_x_15"
        android:textColor="@android:color/white" />
</RelativeLayout>
